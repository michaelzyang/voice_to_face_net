{
    "name": "Voice2Face",
    "n_gpu": 1,

    "arch_voice": {
        "type": "VGGVoxWrapper",
        "args": {"input_dim": 257,
                 "embed_dim": 128}
    },
    "arch_face": {
        "type": "Dictionary",
        "args": {"input_dim": 128,
                 "output_dim": 128}
    },
    "data_loader": {
        "type": "FaceReconstruction",
        "args":{
            "data_dir": "/share/workhorse3/mahmoudi/voxceleb/dataset/iden_split.txt",
            "specgrams_dir": "/share/workhorse3/mahmoudi/voxceleb/dataset/all_specgrams.txt",
            "root_path": "/share/workhorse3/mahmoudi/voxceleb/wav_specgram",
            "face_dir": "INSERT FACE DIR",
            "file_extension": "npy",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 64
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "face_reconstruction_loss",
    "metrics": [
        "face_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 30,
        
        "vggvox_weights": "@TODO: insert weights file",

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
