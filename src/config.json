{
    "name": "Voice2Face_SpeakerID",
    "n_gpu": 1,

    "arch": {
        "type": "SpeakerID",
        "args": {"input_dim": 257,
                 "channel_dim": 256,
                 "embed_dim": 128}
    },
    "data_loader": {
        "type": "SpeakerID",
        "args":{
            "data_dir": "/share/workhorse3/mahmoudi/voxceleb/dataset/iden_split.txt",
            "root_path": "/share/workhorse3/mahmoudi/voxceleb/wav_specgram",
            "file_extension": "npy",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 32
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 30,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
